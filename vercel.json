{
  "trailingSlash": false,
  "routes": [
    {
      "src": "/(news|digest|blog)",
      "status": 301,
      "headers": { "Location": "/ru/$1" }
    },
    {
      "src": "/(news|digest|blog)/(.*)",
      "status": 301,
      "headers": { "Location": "/ru/$1/$2" }
    },
    {
      "src": "/",
      "dest": "/api/localeRedirect.js"
    },
    { "handle": "filesystem" },
    {
      "src": "/(.*)",
      "status": 404,
      "dest": "/404.html"
    }
  ]
}
